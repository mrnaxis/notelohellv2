<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    <link rel="stylesheet" href="~/Content/Site1.css?1" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
</head>
<body>
    <style type="text/css">
        html {
            margin:0;
            height: 95%;
        }
        body{
            background-color:#f7fff7;
            height: 100%;
            margin: 0;
            overflow-x: hidden;
        }
        .supernav{
            display: inline-block;
            width: 100%;
            background-color:#011627;
        }
        .supernav ul{
            list-style-type:none;
            text-decoration: none;
            display: inline;
            margin:0;
            padding:0;
            padding-right: 1em;
            padding-left: 1em;
        }
        .supernav li{
            display: inline-block;
            width: 150px;
            height: 70px;
            text-align: center;
            margin:0;
        }
        .supernav li a{
            text-decoration:none;
            display: block;
            margin: 0;
            padding-top: 17%;
            height: 100%;
            width: 100%;
            color: #eaeaea;
            transition: background-color 0.3s;
        }
        .supernav .logo li a {
            display:block;
            text-decoration:none;
            display: block;
            margin: 0;
            padding-top: 17%;
            height: 100%;
            width: 100%;
            color: #eaeaea;
        }
        .supernav .logo li a:hover{}
        .supernav .dir li a:hover{
            background-color: #2274a5;
        }
        .supernav .esq{
            float:left;
        }
        .supernav .dir{
            float:right;
            clear:left;
        }
        .botaotine{
            background-color: #292f36;
            margin: 15px;
            color: #eaeaea;
            transition: background-color 1s;
        }
        .botaotine:hover{
            background-color: #001E35;
        }
        .page-wrap {
            min-height: 100%;
            /* equal to footer height */
            margin-bottom: -45px;
        }

        .page-wrap:after {
            content: "";
            display: block;
        }

        .site-footer, .page-wrap:after {
            height: 45px;
        }

    </style>
    <div class="supernav">
        <ul class="logo left"><li>@Html.ActionLink("!EloHell", "Index", "Home")</li></ul>
        <ul class="dir">
        @if (Session["Player"] == null)
        {
            <li>@Html.ActionLink("Sign in", "Login", "Auth")</li>
            <li>@Html.ActionLink("Registrar", "Registro", "Users",null,null)</li>
        }
        else
        {
            <li>@Html.ActionLink("Estatísticas", "StatsUser", "StatsUser")</li>
            <li>@Html.ActionLink("Minhas Tarefas", "TaskUser", "TaskUser")</li>
            <li>@Html.ActionLink(Session["PlayerName"].ToString() ?? "Sign in", "BeholderUser", "Auth")</li>
            <li>@Html.ActionLink("Sign out", "LogOff", "Auth")</li>
        }
        </ul>
    </div>
    <style type="text/css">
        .footer-conf {
            background-color: #011627;
            /*position:absolute;*/
            color: #eaeaea;
            /*width: 100%;*/
        }
    </style>
    <!--<div class="container body-content">-->
    <div class="page-wrap">
        @RenderBody()
    </div>
    <script type="text/javascript" src="~/Scripts/General/Verifications.js?1"></script>
    <div class="footer-conf site-footer">
        <footer class="container">
            <p>@DateTime.Now.Year - Made With &hearts; by Us.</p>
        </footer>
    </div>
    <!--</div>-->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
