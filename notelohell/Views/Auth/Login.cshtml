
@{
    ViewBag.Title = "Login";
}
<style type="text/css">
.error-fus{
    color: #ee3426;
    margin: 0,1em,0,1em;
    font-weight: bolder;
}
.login-box{
    max-width: 350px;
    height: 100%;
}
</style>
<div class="container">
    <h2>Login</h2>
    <div class="form-group">
        <div class="form-horizontal">
            <form action="/auth/validatelogin" class="login-box" method="post">
                @Html.AntiForgeryToken()
                <label for="email_login">E-mail:</label>
                <input type="email" id="email_login" name="login" value="@ViewBag.Email" required="required" class="form-control" placeholder="e-mail" />
                <br />
                <label for="pass_login">Senha:</label>
                <input type="password" id="pass_login" name="senha" required="required" class="form-control" placeholder="senha" />
                @if (ViewBag.Error ?? false)
                {
                    <br />
                    <div class="alert alert-danger">
                        <span id="error" >@ViewBag.ErrorMsg</span>
                    </div>
                    
                }
                <br />
                <input type="submit" class="btn btn-default" id="btn_login" value="LogIn">
            </form>
            <br />
            @Html.ActionLink("Não tem cadastro? Registre-se aqui", "Registro", "Users",null,null)
        </div>
    </div>
</div>